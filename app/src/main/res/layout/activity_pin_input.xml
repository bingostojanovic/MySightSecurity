<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybackcolor"
    android:theme="@style/ThemeOverlay.MySightSecurity.FullscreenContainer"
    tools:context=".PinInputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/calc_pad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/editTextNumberPassword"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/mybackcolor"
                android:contentDescription="0"
                android:ems="10"
                android:inputType="numberPassword"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextNumberPassword4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70dp"
                android:backgroundTint="@color/mybackcolor"
                android:contentDescription="0"
                android:ems="10"
                android:inputType="numberPassword"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextNumberPassword3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="140dp"
                android:backgroundTint="@color/mybackcolor"
                android:contentDescription="0"
                android:ems="10"
                android:inputType="numberPassword"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextNumberPassword2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/mybackcolor"
                android:contentDescription="0"
                android:ems="10"
                android:inputType="numberPassword"
                tools:ignore="MissingConstraints" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/under" />

        <TableLayout
            android:layout_width="436dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingVertical="7dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="1"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="2"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="3"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingVertical="7dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="4"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="5"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="6"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingVertical="7dp">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="7"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="8"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="9"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:paddingVertical="7dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/img_btn_shap"
                    app:backgroundTint="@color/btn_color"
                    app:srcCompat="@drawable/cancel" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:text="0"
                    android:textSize="36dp"
                    app:backgroundTint="@color/btn_color"
                    app:cornerRadius="12dp"
                    tools:ignore="MissingConstraints" />


            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>